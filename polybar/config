[colors]
background = #1e1e2e
background-alt = #313244
foreground = #cdd6f4
primary = #cba6f7
secondary = #f38ba8
tertiary = #89b4fa
alert = #f38ba8
disabled = #6c7086
success = #a6e3a1
warning = #f9e2af

[bar/main]
width = 100%
height = 30pt
radius = 12

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2pt
border-size = 0pt
border-color = #00000000

padding-left = 2
padding-right = 2
module-margin = 1

separator = 
separator-foreground = ${colors.disabled}

font-0 = "JetBrains Mono Nerd Font:size=10;3"
font-1 = "JetBrains Mono Nerd Font:size=12;3"
font-2 = "JetBrains Mono Nerd Font:size=16;4"

modules-left = launcher bspwm
modules-center = date
modules-right = updates filesystem pulseaudio memory cpu battery powermenu

cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true

[module/launcher]
type = custom/text
content = 󰣇
content-font = 3
content-foreground = ${colors.primary}
content-padding = 1
click-left = rofi -show drun

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true
enable-scroll = true

ws-icon-0 = I;󰈹
ws-icon-1 = II;󰈹
ws-icon-2 = III;󰈹
ws-icon-3 = IV;󰈹
ws-icon-4 = V;󰈹
ws-icon-5 = VI;󰈹
ws-icon-6 = VII;󰈹
ws-icon-7 = VIII;󰈹
ws-icon-8 = IX;󰈹
ws-icon-9 = X;󰈹

format = <label-state>

label-focused = %icon%
label-focused-background = ${colors.primary}
label-focused-foreground = ${colors.background}
label-focused-padding = 1
label-focused-margin = 1
label-focused-font = 2

label-occupied = %icon%
label-occupied-foreground = ${colors.primary}
label-occupied-padding = 1
label-occupied-margin = 1
label-occupied-font = 2

label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 1
label-urgent-margin = 1
label-urgent-font = 2

label-empty = %icon%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1
label-empty-margin = 1
label-empty-font = 2

[module/date]
type = internal/date
interval = 1
date = %a %d %b
time = %H:%M
format-prefix = "󰃭 "
format-prefix-foreground = ${colors.tertiary}
format-prefix-font = 2
label = %date% %time%
label-foreground = ${colors.foreground}

[module/filesystem]
type = internal/fs
interval = 30
mount-0 = /
format-mounted = <label-mounted>
format-mounted-prefix = "󰋊 "
format-mounted-prefix-foreground = ${colors.success}
format-mounted-prefix-font = 2
label-mounted = %percentage_used%%
label-mounted-foreground = ${colors.foreground}

[module/pulseaudio]
type = internal/pulseaudio
interval = 5
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
format-muted-prefix = "󰖁 "
format-muted-prefix-foreground = ${colors.alert}
format-muted-prefix-font = 2
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}
label-muted = "Muted"
label-muted-foreground = ${colors.disabled}

ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾
ramp-volume-foreground = ${colors.tertiary}
ramp-volume-font = 2

[module/memory]
type = internal/memory
interval = 3
format = <label>
format-prefix = "󰍛 "
format-prefix-foreground = ${colors.warning}
format-prefix-font = 2
label = %percentage_used%%
label-foreground = ${colors.foreground}

[module/cpu]
type = internal/cpu
interval = 3
format = <label>
format-prefix = "󰻠 "
format-prefix-foreground = ${colors.secondary}
format-prefix-font = 2
label = %percentage%%
label-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98
poll-interval = 5

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%
label-charging-foreground = ${colors.foreground}
label-discharging-foreground = ${colors.foreground}
label-full-foreground = ${colors.foreground}

ramp-capacity-0 = 󰂎
ramp-capacity-1 = 󰁺
ramp-capacity-2 = 󰁻
ramp-capacity-3 = 󰁼
ramp-capacity-4 = 󰁽
