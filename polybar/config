[module/updates]
type = custom/script
exec = checkupdates | wc -l
interval = 1000
format = <label>
format-prefix = "󰚰 "
format-prefix-foreground = ${colors.warning}
format-prefix-font = 2
label = %output%
label-foreground = ${colors.foreground}

[module/powermenu]
